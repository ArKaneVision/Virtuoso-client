{{#each practices as |practice|}}
  {{log practice}}
  <section data-id="{{practice.id}}" class="practice-item">
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{practice.instrument}}</td>
      <td>{{practice.duration}}hrs</td>
      <td>{{practice.date}}</td>
      <td>{{practice.format_time}}</td>
      <td>
        <div class="dropdown">
          <button class="btn btn-outline-success my-2 my-sm-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Update
          </button>
          <div id="update-prt-drop" class="dropdown-menu" aria-labelledby="navbarDropdown">
            <form class="update-prt" data-id="{{practice.id}}">
              <legend>Update Details</legend>
              <input class="form-input" type="text" name="practice[instrument]" placeholder="Instrument"><br>
              <input class="form-input" type="date" name="practice[date]" placeholder="yyyy-mm-dd"><br>
              <input class="form-input" type="time" name="practice[start_time]" placeholder="xx:xx xm"><br>
              <input class="form-input" type="number" step="0.1" min="0" max="24" name="practice[duration]" placeholder="0.0hrs"><br>
              <input type="submit" value="Update" class="btn btn-outline-light my-2 my-sm-0"><br>
            </form>
          </div>
        </div>
      </td>
      <td>
        <button data-id="{{practice.id}}" type="button" class="btn btn-outline-danger delete-modal" data-toggle="modal" data-target="#deleteModal{{@index}}">
          Delete
        </button>
        <!-- Modal -->
        <div class="modal fade" id="deleteModal{{@index}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this Session?
                <ul>
                  <li>Session #: {{@index}}</li>
                  <li>Instrument: {{practice.instrument}}</li>
                  <li>Date: {{practice.date}}</li>
                  <li>Time: {{practice.format_time}}</li>
                  <li>Duration: {{practice.duration}}hrs</li>
                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary cancel-delete" data-dismiss="modal">Cancel</button>
                <button data-id="{{practice.id}}" type="button" class="btn btn-danger delete-button" data-dismiss="modal">Delete</button>
              </div>
            </div>
          </div>
        </div>
      </td>
    </tr>
  </section>

{{/each}}
