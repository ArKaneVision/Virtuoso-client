{{#each practices as |practice|}}
    <tr data-id="{{practice.id}}">
      <th scope="row">{{inc @index}}</th>
      <td>{{practice.instrument}}</td>
      <td>{{practice.duration}} Min</td>
      <td>{{practice.date}}</td>
      <td>{{practice.format_time}}</td>
      <td>
        <button data-id="{{practice.id}}" type="button" class="btn btn-outline-success my-2 my-sm-0 update-modal" data-toggle="modal" data-target="#updateModal">
          Edit
        </button>
      </td>
      <td>
        <button data-id="{{practice.id}}" type="button" class="btn btn-outline-danger delete-modal" data-toggle="modal" data-target="#deleteModal">
          Delete
        </button>
      </td>
    </tr>
{{/each}}
